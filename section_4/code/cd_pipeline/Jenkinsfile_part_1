#!/usr/bin/groovy

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps { buildApp() }
		}

        stage("Deploy - Dev") {
            steps { deploy('dev') }
		}

	}
}


// steps
def buildApp() {
	dir ('section_4/code/cd_pipeline' ) {
		def appImage = docker.build("hands-on-jenkins/myapp:${BUILD_NUMBER}")
	}
}

def deploy(environment) {

	def containerName = ''
	def port = ''

	if ("${environment}" == 'dev') {
		containerName = "app_dev"
		port = "8888"
	} 
	else {
		println "Environment not valid"
		System.exit(0)
	}
	bat '"C:\\Program Files\\Git\\bin\\bash.exe" -c "docker ps -f name=${CONTAINER_NAME} -q | xargs --no-run-if-empty docker stop"'
	bat '"C:\\Program Files\\Git\\bin\\bash.exe" -c "docker ps -a -f name=${CONTAINER_NAME} -q | xargs -r docker rm"'
	bat '"C:\\Program Files\\Git\\bin\\bash.exe" -c "docker run -d -p ${PORT}:5000 --name ${CONTAINER_NAME} hands-on-jenkins/myapp:${BUILD_NUMBER}"'

}

